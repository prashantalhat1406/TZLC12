<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".tzlc_matchofficial_add"
    tools:showIn="@layout/activity_tzlc_matchofficial_add">

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.2"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:layout_weight="0.7" android:textSize="@dimen/listSecondLine" android:layout_gravity="center" android:gravity="center"
            android:layout_height="match_parent" android:text="Club : "/>
        <Spinner
            android:layout_width="match_parent" android:id="@+id/spnMOAddClub"
            android:layout_height="match_parent" android:layout_weight="0.3" ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.2"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:layout_weight="0.7" android:textSize="@dimen/listSecondLine" android:layout_gravity="center" android:gravity="center"
            android:layout_height="match_parent" android:text="Player : "/>
        <Spinner
            android:layout_width="match_parent" android:id="@+id/spnMOAddPlayer"
            android:layout_height="match_parent" android:layout_weight="0.3" ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.2"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:layout_weight="0.7" android:textSize="@dimen/listSecondLine" android:layout_gravity="center" android:gravity="center"
            android:layout_height="match_parent" android:text="Duty : "/>
        <Spinner
            android:layout_width="match_parent" android:id="@+id/spnMOAddDuty"
            android:layout_height="match_parent" android:layout_weight="0.3" ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="0.1"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>