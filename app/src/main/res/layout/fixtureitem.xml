    <LinearLayout
        android:layout_width="match_parent"  android:layout_weight="0.15"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.3">
            <TextView android:id="@+id/fixtureHomeClub"
                android:layout_width="match_parent" android:gravity="right|center" android:layout_weight="0.3" android:textSize="20dp"
                android:layout_height="match_parent" android:text="Mutant Rhinos" android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.5" android:textSize="20dp"
                android:layout_height="match_parent" android:text="  vs  " android:textStyle="bold"/>
            <TextView android:id="@+id/fixtureAwayClub"
                android:layout_width="match_parent" android:gravity="left|center" android:layout_weight="0.3" android:textSize="20dp"
                android:layout_height="match_parent" android:text="Thunderboltz" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="match_parent" android:layout_weight="0.4">
            <LinearLayout
                android:layout_width="match_parent" android:layout_weight="0.6"
                android:layout_height="match_parent" android:orientation="vertical">
                <TextView android:id="@+id/fixtureDisplayDate"
                    android:layout_width="match_parent" android:gravity="bottom|center" android:layout_weight="0.4" android:textSize="14dp"
                    android:layout_height="match_parent" android:text="01/12/2018" android:layout_gravity="center_horizontal" />
                <TextView android:id="@+id/fixtureDisplayDay"
                    android:layout_width="match_parent" android:gravity="top|center" android:layout_weight="0.4" android:textSize="14dp"
                    android:layout_height="match_parent" android:text="Wednesday"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="0.4"
                android:layout_height="match_parent">
                <TextView android:id="@+id/fixtureDisplayType"
                    android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.5" android:textSize="14dp"
                    android:layout_height="match_parent" android:text="CLM, NCL" android:textStyle="bold"/>
                <TextView android:id="@+id/fixtureResult"
                    android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.5" android:textSize="12dp"
                    android:layout_height="match_parent" android:text="Yet to be played"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

