<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp" android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="match_parent"  android:layout_weight="0.15"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView android:id="@+id/pageName"
            android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.4" android:textSize="@dimen/pageFont"
            android:layout_height="match_parent" android:text="Fixtures" android:textStyle="bold"/>
        <TextView android:id="@+id/pageInfo"
            android:layout_width="match_parent" android:gravity="center" android:layout_weight="0.6" android:textSize="@dimen/listSecondLine"
            android:layout_height="match_parent" android:text="View fixtures for current season" />
    </LinearLayout>
</LinearLayout>